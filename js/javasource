var today = new Date();
var year = today.getFullYear();
var lastModified = new Date(document.lastModified);

let daysInMonth = createNumArray(0, 32);
let months = createNumArray(0, 13);
let hours = createNumArray(0, 24);
let min = createNumArray(0, 60);
let sec = createNumArray(0, 60);

var mdDay, mdMonth, mdYear, mdHour, mdMin, mdSec;

mdDay = daysInMonth[lastModified.getDate()];
mdMonth = months[lastModified.getMonth()];
mdYear = lastModified.getFullYear();
mdHour = hours[lastModified.getHours()];
mdMin = min[lastModified.getMinutes()];
mdSec = sec[lastModified.getSeconds()];

function copyYear() {
    document.getElementById("copyright").innerHTML = " " + year;
    document.getElementById("lastestUpdate").innerHTML = "Last Updated: " + mdMonth + "/" + mdDay + "/" + mdYear + " " + mdHour + ":" + mdMin + ":" + mdSec;
};

function createNumArray(start, count) {
    let array = [];
    for (var i = start; i < count; ++i) {
        if (i < 10) {
            array[i] = "0" + i;
        } else {
            array[i] = "" + i + "";
        }

    }
    return array;
};